<!-- - - - - - - - - - - - - - Filter - - - - - - - - - - - - - - - - -->

<% if status == "category_page" %>

    <section class="section_offset">
    
        <h3>TÌM TRONG CHUYÊN MỤC</h3>
    
        <%= form_tag({controller: "category_page", action: "index"}, method: "get", class: "type_2") do %>
    
            <div class="table_layout list_view">
    
                <div class="table_row">
                    
                    <%= hidden_field_tag "category_id", @category.id %>
    
                    <!-- - - - - - - - - - - - - - Category filter - - - - - - - - - - - - - - - - -->
    
                    <div class="table_cell">
    
                        <label>Tìm kiếm sản phẩm có trong chuyên mục <strong>"<%= @category.title %>"</strong></label>
                        
                        <%= text_field_tag :search, params[:search], placeholder: "Nhập tên sản phẩm cần tìm..." %>
    
                    </div><!--/ .table_cell -->
    
                    <!-- - - - - - - - - - - - - - End of category filter - - - - - - - - - - - - - - - - -->
    
                </div><!--/ .table_row -->
    
            </div><!--/ .table_layout -->
    
            <footer class="bottom_box">
    
                <div class="buttons_row">
    
                    <button type="submit" class="button_blue middle_btn">Tìm kiếm</button>
    
                    <button type="reset" class="button_grey middle_btn filter_reset">Nhập lại</button>
    
                </div>
    
            </footer>
    
        <% end %>
    
    </section>
    
