<!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->

<div class="wide_layout">

    <!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->

    <%= render 'blog/header' %>
    
    <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->

    <!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->

    <div class="secondary_page_wrapper">

        <div class="container">

            <!-- - - - - - - - - - - - - - Breadcrumbs - - - - - - - - - - - - - - - - -->

            <ul class="breadcrumbs">

                <li><%= link_to "Trang chủ", root_path %></li>
                <li class="active">Nhãn hiệu phân phối</li>

            </ul>

            <div class="row">

                <aside class="col-md-3 col-sm-4 has_mega_menu">

                    <!-- - - - - - - - - - - - - - Categories - - - - - - - - - - - - - - - - -->

                    <%= render 'category_page/category_left_page' %>

                    <!-- - - - - - - - - - - - - - End of categories - - - - - - - - - - - - - - - - -->

                    <!-- - - - - - - - - - - - - - Banner - - - - - - - - - - - - - - - - -->

                    <div class="section_offset">

                        <a href="#" class="banner">
                            
                            <img src="images/box-win-10.jpg" alt="" width="243" height="262">

                        </a>

                    </div>

                    <!-- - - - - - - - - - - - - - End of banner - - - - - - - - - - - - - - - - -->

                    <!-- - - - - - - - - - - - - - Tags - - - - - - - - - - - - - - - - -->

                    <section class="section_offset">

                        <h3>Nhãn</h3>

                        <div class="tags_container">

                            <ul class="tags_cloud">
                                
                                <% @menu.each do |item| %>
                            
                                    <% if item.level == 1 %>
                                        
                                        <li><a class="button_grey" <%= (link_to item.title, {controller: "category_page", action: "index", category_id: item.id }).html_safe %></a></li>
                                        
                                    <% end %>
                                
                                <% end %>

                            </ul><!--/ .tags_cloud-->
                            
                        </div><!--/ .tags_container-->

                    </section>

                    <!-- - - - - - - - - - - - - - End of tags - - - - - - - - - - - - - - - - -->

                </aside>

                <main class="col-md-9 col-sm-8">

                    <section class="section_offset">

                        <h1>Danh sách nhãn hiệu phân phối</h1>

                    </section>

                    <!-- - - - - - - - - - - - - - Products - - - - - - - - - - - - - - - - -->

                    <div class="section_offset">

                        <header class="top_box on_the_sides">
                            
                            <div class="left_side">

                                <%= page_entries_info @partners %> đối tác.

                            </div>

                            <div class="right_side">

                                <!-- - - - - - - - - - - - - - Product layout type - - - - - - - - - - - - - - - - -->

                                <div class="layout_type buttons_row" data-table-container="#products_container">

                                    <a href="#" data-table-layout="grid_view" class="button_grey middle_btn icon_btn active tooltip_container"><i class="icon-th"></i><span class="tooltip top">Danh sách</span></a>

                                </div>

                                <!-- - - - - - - - - - - - - - End of product layout type - - - - - - - - - - - - - - - - -->

                            </div>

                        </header>

                        <div class="table_layout" id="products_container">
                            
                            <div class="table_row">
                                
                                <% @partners.each_with_index do |item, index| %>

                                    <!-- - - - - - - - - - - - - - Product - - - - - - - - - - - - - - - - -->
    
                                    <div class="table_cell">
    
                                        <div class="product_item">
    
                                            <!-- - - - - - - - - - - - - - Thumbmnail - - - - - - - - - - - - - - - - -->
    
                                            <div class="partner_list">
                                                
                                                <% if item.image_url.nil? %>
                                                    <p>Chưa cập nhật logo...</p>
                                                <% else %>
                                                    <%= link_to(image_tag(item.image_url.partner_image, class: "centered_list"), {controller: "manufacturer_page", action: "index", manufacturer_id: item.manufacturer_id}) %>
                                                <% end %>
    
                                            </div><!--/. image_wrap-->
    
                                            <!-- - - - - - - - - - - - - - End thumbmnail - - - - - - - - - - - - - - - - -->
    
                                            <!-- - - - - - - - - - - - - - Product title & price - - - - - - - - - - - - - - - - -->
    
                                            <div class="description">
    
                                                <%= link_to item.manufacturer.name, {controller: "manufacturer_page", action: "index", manufacturer_id: item.manufacturer_id} %>
    
                                                <div class="clearfix product_info">
    
                                                    <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
    
                                                    <ul class="rating alignright">
    
                                                        <li class="active"></li>
                                                        <li class="active"></li>
                                                        <li class="active"></li>
                                                        <li class="active"></li>
                                                        <li></li>
    
                                                    </ul>
                                                    
                                                    <!-- - - - - - - - - - - - - - End of product rating - - - - - - - - - - - - - - - - -->
    
                                                </div>
    
                                            </div>
    
                                            <!-- - - - - - - - - - - - - - End of product title & price - - - - - - - - - - - - - - - - -->
    
                                        </div><!--/ .product_item-->
    
                                    </div>
    
                                    <!-- - - - - - - - - - - - - - End of product - - - - - - - - - - - - - - - - -->
                                    
                                    <%= "</div><div class=\"table_row\">".html_safe if index%3 == 2 %>
                                
                                <% end %>
                            
                            </div><!--/ .table_row -->

                        </div><!--/ .table_layout -->

                        <footer class="bottom_box on_the_sides">

                            <div class="left_side">

                                <%= page_entries_info @partners %> đối tác.

                            </div>

                            <div class="right_side">
                                <%= will_paginate @partners, previous_label: '<', next_label: '>', renderer: BootstrapPagination::Rails %>
                            </div>

                        </footer>

                    </div>

                    <!-- - - - - - - - - - - - - - End of products - - - - - - - - - - - - - - - - -->

                </main>

            </div><!--/ .row -->

        </div><!--/ .container-->

    </div><!--/ .page_wrapper-->
    
    <!-- - - - - - - - - - - - - - End Page Wrapper - - - - - - - - - - - - - - - - -->

    <!-- - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - - -->

    <%= render 'blog/footer' %>
    
    <!-- - - - - - - - - - - - - - End Footer - - - - - - - - - - - - - - - - -->

</div><!--/ [layout]-->

<!-- - - - - - - - - - - - - - End Main Wrapper - - - - - - - - - - - - - - - - -->

