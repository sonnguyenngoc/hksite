<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Hoàng Khang - Gian hàng sản phẩm</title>

	<!-- Global stylesheets -->
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900' %>
    <%= stylesheet_link_tag '/backend/assets/css/icons/icomoon/styles.css' %>
    <%= stylesheet_link_tag '/backend/assets/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag '/backend/assets/css/core.min.css' %>
    <%= stylesheet_link_tag '/backend/assets/css/components.min.css' %>
    <%= stylesheet_link_tag '/backend/assets/css/colors.min.css' %>
	<%= stylesheet_link_tag '/backend/stylesheets/custom_backend.css' %>
	<!-- /global stylesheets -->
	
	<!-- JS and meta for Rails -->

	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

	<%= csrf_meta_tags %>

	<!-- /js and meta for rails -->

	<!-- Core JS files -->
    <%= javascript_include_tag '/backend/assets/js/plugins/loaders/pace.min.js' %>
    <%= javascript_include_tag '/backend/assets/js/core/libraries/jquery.min.js' %>
    <%= javascript_include_tag '/backend/assets/js/core/libraries/bootstrap.min.js' %>
    <%= javascript_include_tag '/backend/assets/js/plugins/loaders/blockui.min.js' %>
	<!-- /core JS files -->

</head>

<body>

	<!-- Main navbar -->
	<div class="navbar navbar-inverse">
		<div class="navbar-header">
			<a class="navbar-brand" href="<%= admin_manages_path %>"><img src="<%= url_for("/backend/assets/images/logo_light.png") %>" alt=""></a>

			<ul class="nav navbar-nav visible-xs-block">
				<li><a data-toggle="collapse" data-target="#navbar-mobile"><i class="icon-tree5"></i></a></li>
				<li><a class="sidebar-mobile-main-toggle"><i class="icon-paragraph-justify3"></i></a></li>
			</ul>
		</div>

		<div class="navbar-collapse collapse" id="navbar-mobile">
			<ul class="nav navbar-nav">
				<li><a class="sidebar-control sidebar-main-toggle hidden-xs"><i class="icon-paragraph-justify3"></i></a></li>
			</ul>
			
			<p class="navbar-text"><span class="label bg-success-400">Đang truy cập</span></p>

			<ul class="nav navbar-nav navbar-right">
				<li class="dropdown language-switch">
					<a class="dropdown-toggle" data-toggle="dropdown">
						<img src="/backend/assets/images/flags/vn.png" class="position-left" alt="">
						Tiếng Việt
					</a>
				</li>

				<li class="dropdown dropdown-user">
					<a class="dropdown-toggle" data-toggle="dropdown">
						<img src="<%= url_for("/backend/assets/images/logo-company.jpg") %>" alt="">
						<span>Hoang Khang Incotech</span>
						<i class="caret"></i>
					</a>

					<ul class="dropdown-menu dropdown-menu-right">
						<li>
                        <% if login_signed_in? %>
                            <%= link_to('<i class="icon-switch2"></i> Đăng xuất'.html_safe, destroy_login_session_path, :method => :delete) %>
                        <%end%>
					</li>
					</ul>
				</li>
			</ul>
		</div>
	</div>
	<!-- /main navbar -->


	<!-- Page container -->
	<div class="page-container">

		<!-- Page content -->
		<div class="page-content">

			<!-- Main sidebar -->
			<div class="sidebar sidebar-main">
				<div class="sidebar-content">

					<!-- User menu -->
					<div class="sidebar-user">
						<div class="category-content">
							<div class="media">
								<a href="#" class="media-left"><img src="<%= url_for("/backend/assets/images/logo-company.jpg") %>" class="img-circle img-sm" alt=""></a>
								<div class="media-body">
									<span class="media-heading text-semibold">Hoàng Khang Incotech</span>
									<div class="text-size-mini text-muted">
										<i class="icon-pin text-size-small"></i> &nbsp;TP.HCM, VN
									</div>
								</div>

								<div class="media-right media-middle">
									<ul class="icons-list">
										<li>
											<a href="#"><i class="icon-cog3"></i></a>
										</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
					<!-- /user menu -->


					<!-- Main navigation -->
					<div class="sidebar-category sidebar-category-visible">
						<div class="category-content no-padding">
							<ul class="navigation navigation-main navigation-accordion">

								<!-- Main -->
								<li class="navigation-header"><span>MENU QUẢN TRỊ</span> <i class="icon-menu" title="Main pages"></i></li>
								<li><a><i class="icon-home4"></i> <span>BẢNG ĐIỀU KHIỂN</span></a></li>
								<li>
									<a href="#"><i class="icon-stack2"></i> <span>Quản lý trang chủ</span></a>
									<ul>
										<li><%= link_to 'Quản lý tin nhắn', admin_messages_path %></li>
										<li><%= link_to 'Quản lý email - Newsletter', admin_newsletters_path %></li>
										<li><%= link_to 'Quản lý SlideShow', admin_slide_shows_path %></li>
										<li><%= link_to 'Quản lý danh sách đối tác', admin_partners_path %></li>
									</ul>
								</li>
								<li>
									<a href="#"><i class="icon-tree5"></i> <span>Quản lý chuyên mục</span></a>
									<ul>
										<li><%= link_to 'Danh sách chuyên mục', admin_menus_path %></li>
										<li><%= link_to 'Chuyên mục cũ', {controller: "admin/old_category", action: "index"} %></li>
									</ul>
								</li>
								<li>
									<a href="#"><i class="icon-pencil3"></i> <span>Quản lý bài viết</span></a>
									<ul>
										<li><%= link_to 'Danh sách tin tức', admin_articles_path %></li>
										<li><%= link_to 'Loại tin tức', admin_tags_path %></li>
									</ul>
								</li>
								<li>
									<a href="#"><i class="icon-stack"></i> <span>Quản lý đơn hàng</span></a>
									<ul>
										<li><%= link_to 'Danh sách đơn hàng', admin_customer_orders_path %></li>
									</ul>
								</li>
								<li>
									<a href="#"><i class="icon-task"></i> <span>Quản lý sản phẩm</span></a>
									<ul>
										<li><%= link_to 'Quản lý thông tin sản phẩm', admin_product_infos_path %></li>
									</ul>
								</li>
								<!-- /main -->

							</ul>
						</div>
					</div>
					<!-- /main navigation -->

				</div>
			</div>
			<!-- /main sidebar -->

			<%= yield %>

		</div>
		<!-- /page content -->

	</div>
	<!-- /page container -->

</body>
</html>