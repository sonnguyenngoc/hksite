<!-- Page header -->
<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h4><a href="" class="btn-back"><i class="icon-arrow-left52 position-left"></i></a> <span class="text-semibold">Quản lý</span> - Hình ảnh</h4>
        </div>
    </div>

    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href=""><i class="icon-home2 position-left"></i> Trang chủ</a></li>
            <li><a href="">Hình ảnh</a></li>
            <li class="active">Quản lý hình ảnh</li>
        </ul>
    </div>
</div>
<!-- /page header -->

<!-- Content area -->
<div class="content">

    <!-- Basic datatable -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <%= link_to 'Thêm hình ảnh mới', new_product_info_path, class: 'btn btn-primary' %>
            <hr/>
            <h5 class="panel-title">Danh sách <span class="text-semibold">HÌNH ẢNH</span></h5>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-action="collapse"></a></li>
                    <li><a data-action="reload"></a></li>
                    <li><a data-action="close"></a></li>
                </ul>
            </div>
        </div>
        
        <table class="table datatable-picture">
            <thead>
                <tr>
					<th>Hình ảnh</th>
                    <th>Mô tả</th>
                    <th>Giá cũ</th>
                    <th>HOT</th>
                    <th>KM</th>
                    <th>Bán chạy</th>
                    <th>Nổi bật</th>
                    <th>Mới</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                  <% @product_infos.each do |item| %>
                    <tr>
						<td>
							<div class="media-left">
								<img src="<%= item.image_url if item.image_url? %>" style="width: 82px; height: 56px;" class="img-rounded" alt="">
							</div>
						</td>
                        <td>
						  <%= link_to (truncate(strip_tags(item.description), length: 40)), item %>
						</td>
						</td>
                        <td>
							<span class="label label-success"><%= item.old_price %></span>
						</td>
                        <td><input id="product_hot" name="hot" type="checkbox" value="1" /></td>
                        <td><input id="product_sale" name="khuyến mãi" type="checkbox" value="1" /></td>
                        <td><input id="product_bestselled" name="Bán chạy" type="checkbox" value="1" /></td>
                        <td><input id="product_prominent" name="Nổi bật" type="checkbox" value="1" /></td>
                        <td><input id="new" name="Mới" type="checkbox" value="1" /></td>
                        <td class="text-center">
                            <ul class="icons-list">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="icon-menu9"></i>
                                    </a>
    
                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <li>
                                            <%= link_to '<i class="glyphicon glyphicon-edit"></i> Chỉnh sửa'.html_safe, edit_product_info_path(item) %>
                                        </li>
                                        <li>
                                            <%= link_to '<i class="icon-cross2"></i> Xóa'.html_safe, item, method: :delete, data: {confirm: 'Bạn có chắc muốn xóa?'} %>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <!-- /basic datatable -->

    <!-- Footer -->
	<div class="footer text-muted">
		Copyright &copy; 2016
	</div>
	<!-- /footer -->

</div>
<!-- /content area -->

