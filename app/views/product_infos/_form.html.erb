
<% if @product_info.errors.any? %>
    <div id="error_explanation">
        <% @product_info.errors.full_messages.each do |message| %>
            <span class="label label-warning"><%= message %></span>
        <% end %>
        <hr/>
    </div>
<% end %>

<%= form_for @product_info, html: {class: "form-horizontal"} do |f| %>

    <div class="form-group">
        <%= f.label "Hình ảnh: ", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.file_field :image_url, class: "file-styled" %>
          <span class="help-block">Chấp nhận tập tin hình ảnh dịnh dạng: gif, png, jpg.Tối đa 2Mb</span>
          <%= image_tag(@product_info.image_url, size: "250x150", alt: "Hình ảnh", class: "img-rouded") %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label "Mô tả: ", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
            <%= f.text_area :description, rows: "4", cols: "4", id: "editor-full" %>
        </div>
    </div>
        
    <div class="form-group">
        <%= f.label "Giá cũ: ", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
            <%= f.text_field :old_price, placeholder: "Nhập giá cũ...", class: "form-control" %>
        </div>
    </div>

    <div class="text-right">
        <button type="submit" class="btn btn-success">Lưu <i class="icon-plus22 position-right"></i></button>
    </div>
<% end %>

<!-- Theme JS files -->
<%= javascript_include_tag '/assets_backend/js/plugins/forms/styling/uniform.min.js' %>
<%= javascript_include_tag '/assets_backend/js/core/app.js' %>

<%= javascript_include_tag '/assets_backend/js/pages/form_layouts.js' %>
<%= javascript_include_tag '/assets_backend/js/plugins/forms/selects/select2.min.js' %>
<!-- /theme JS files -->
