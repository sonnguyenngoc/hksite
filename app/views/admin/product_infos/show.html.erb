
<!-- Main content -->
<div class="content-wrapper">

    <!-- Page header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title">
                <h4><a href="<%= admin_tags_path %>" class="btn-back"><i class="icon-arrow-left52 position-left"></i></a> <span class="text-semibold">Tags</span> - Management</h4>
            </div>
        </div>
    
        <div class="breadcrumb-line">
            <ul class="breadcrumb">
                <li><%= link_to "<i class='icon-home2 position-left'></i> Trang chủ".html_safe, admin_manages_path %></li>
                <li><%= link_to "Quản lý thông tin sản phẩm", admin_product_infos_path %></li>
                <li class="active"><%= @product_info.product.name %></li>
            </ul>
        </div>
    </div>
    <!-- /page header -->
    
    <!-- Content area -->
    <div class="content">
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h5 class="panel-title"><span class="text-semibold"><%= @product_info.product.name %></span></h5><br/>
                
                <%= content_tag(:p, class: "color-red") do %>
                  <%= notice %>
                <% end %>
            
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <%= label "", "Hình ảnh: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= image_tag(@product_info.image_url, size: "250x150", alt: "Hình ảnh của slide", class: "img-rouded") %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= label "", "Tên sản phẩm: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static") do %>
                              <%= @product_info.product.name %>
                            <% end %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= label "", "Giá bán: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static ") do %>
                              <%= number_with_delimiter @product_info.product.product_price.price.to_i %> <i>VNĐ</i>
                            <% end %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= label "", "Giảm giá: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static ") do %>
                              <%= number_with_delimiter @product_info.product.product_info.sale_off_price.to_f %> <i>%</i>
                            <% end %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= label "", "Giá Khuyến mãi: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static ") do %>
                              <%= number_with_delimiter @product_info.product.product_info.sale_price.to_f %> <i>VNĐ</i>
                            <% end %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= label "", "Quà tặng: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static ") do %>
                              <%= @product_info.bonus_product %>
                            <% end %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= label "", "Mô tả: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static ") do %>
                              <%= @product_info.product.description %>
                            <% end %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= label "", "Ngày tạo: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static ") do %>
                              <%= @product_info.created_at.strftime("%d/%m/%Y") %>
                            <% end %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= label "", "Trạng thái: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static ") do %>
                              <% if !@product_info.nil? %>
                                    <% if @product_info.product_hot == "on" %>
                                        HOT,&nbsp;&nbsp;
                                    <% end %>
                                    <% if @product_info.product_new == "on" %>
                                        MỚI,&nbsp;&nbsp;
                                    <% end %>
                                    <% if @product_info.product_sale == "on" %>
                                        KHUYẾN MÃI,&nbsp;&nbsp;
                                    <% end %>
                                    <% if @product_info.product_prominent == "on" %>
                                        NỔI BẬT,&nbsp;&nbsp;
                                    <% end %>
                                    <% if @product_info.product_bestselled == "on" %>
                                        BÁN CHẠY,&nbsp;&nbsp;
                                    <% end %>
                                <% end %>
                            <% end %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= label "", "Giới thiệu: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static ") do %>
                              <%= @product_info.description %>
                            <% end %>
                        </div>
                    </div>
                </form>
            
                <%= link_to '<i class="icon-backward2 position-left"></i> Trở về'.html_safe, admin_product_infos_path, class: "btn btn-primary" %>
                
            </div>
        </div>
    
        <!-- Footer -->
        <%= render '/admin/manages/footer' %>
        <!-- /footer -->
    
    </div>
    <!-- /content area -->

</div>
<!-- /main content -->

<!-- Theme JS files -->
<%= javascript_include_tag '/backend/assets/js/plugins/tables/datatables/datatables.min.js' %>
<%= javascript_include_tag '/backend/assets/js/plugins/forms/selects/select2.min.js' %>

<%= javascript_include_tag '/backend/assets/js/core/app.js' %>
<!-- /theme JS files -->