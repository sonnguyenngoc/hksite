<!-- Main content -->
<div class="content-wrapper">

    <!-- Page header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title">
                <h4><a href="<%= admin_partners_path %>" class="btn-back"><i class="icon-arrow-left52 position-left"></i></a> <span class="text-semibold">Quản lý</span> - thông tin đối tác</h4>
            </div>
        </div>
    
        <div class="breadcrumb-line">
            <ul class="breadcrumb">
                <li><a href="<%= admin_manages_path %>"><i class="icon-home2 position-left"></i> Trang chủ</a></li>
                <li><a href="<%= admin_partners_path %>">Quản lý thông tin đối tác</a></li>
                <li><a href="<%= admin_partners_path %>">Danh sách đối tác</a></li>
                <li class="active"><%= @partner.manufacturer.name %></li>
            </ul>
        </div>
    </div>
    <!-- /page header -->
    
    <!-- Content area -->
    <div class="content">
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h5 class="panel-title"><span class="text-semibold"></span></h5>
                
                <%= content_tag(:p, class: "color-red") do %>
                  <%= notice %>
                <% end %>
            
                <form class="form-horizontal" role="form">
                   
                    <div class="form-group">
                        <%= label "", "Hình ảnh: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= image_tag(@partner.image_url.partner_image, alt: "Hình ảnh của bài viết", class: "img-rouded") %>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <%= label "", "Tiêu đề: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static text-justify") do %>
                                <%= @partner.manufacturer.name %>
                            <% end %>
                        </div>
                    </div>
                        
                    <div class="form-group">
                        <%= label "", "Ngày tạo: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static") do %>
                              <%= @partner.created_at.strftime("%d/%m/%Y") %>
                            <% end %>
                        </div>
                    </div>
                </form>
            
                <%= link_to '<i class="icon-backward2 position-left"></i> Trở về'.html_safe, admin_partners_path, class: "btn btn-primary" %>
                
            </div>
        </div>
    
        <!-- Footer -->
        <%= render '/admin/manages/footer' %>
        <!-- /footer -->
    
    </div>
    <!-- /content area -->

</div>
<!-- /main content -->

<!-- Theme JS files -->
<%= javascript_include_tag '/backend/assets/js/plugins/tables/datatables/datatables.min.js' %>
<%= javascript_include_tag '/backend/assets/js/plugins/forms/selects/select2.min.js' %>

<%= javascript_include_tag '/backend/assets/js/core/app.js' %>
<!-- /theme JS files -->