<!-- Main content -->
<div class="content-wrapper">

    <!-- Page header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title">
                <h4><a href="<%= admin_menus_path %>" class="btn-back"><i class="icon-arrow-left52 position-left"></i></a> <span class="text-semibold">Danh sách</span> - Chuyên mục</h4>
            </div>
        </div>
    
        <div class="breadcrumb-line">
            <ul class="breadcrumb">
                <li><a href="#"><i class="icon-home2 position-left"></i> Trang chủ</a></li>
                <li><a href="<%= admin_menus_path %>">Quản lý chuyên mục</a></li>
                <li><a href="<%= admin_menus_path %>">Danh sách chuyên mục</a></li>
                <li class="active"><%= @menu.title %></li>
            </ul>
        </div>
    </div>
    <!-- /page header -->
    
    <!-- Content area -->
    <div class="content">
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h5 class="panel-title"><span class="text-semibold"><%= @menu.title %></span></h5><br/>
                
                <p class="color-red"><%= notice %></p><br/>
            
                <form class="form-horizontal" role="form">
                   
                    <div class="form-group">
                        <%= label "", "Tiêu đề: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static") do %>
                              <%= @menu.title %>
                            <% end %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= label "", "Chuyên mục liên quan: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <% @menu.categories.each do |item| %>
                                <%= content_tag(:p, class: "form-control-static") do %>
                                    <%= item.name %>
                                <% end %>
                            <% end %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= label "", "Mô tả: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static text-justify") do %>
                              <%= @menu.description %>
                            <% end %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= label "", "Created At: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static") do %>
                              <%= @menu.created_at.strftime("%d/%m/%Y") %>
                            <% end %>
                        </div>
                    </div>
                </form>
            
                <%= link_to '<i class="icon-backward2 position-left"></i> Trở về'.html_safe, admin_menus_path, class: "btn btn-primary" %>
                
            </div>
        </div>
    
        <!-- Footer -->
        <%= render '/admin/manages/footer' %>
        <!-- /footer -->
    
    </div>
    <!-- /content area -->

</div>
<!-- /main content -->

<!-- Theme JS files -->
<%= javascript_include_tag '/backend/assets/js/plugins/tables/datatables/datatables.min.js' %>
<%= javascript_include_tag '/backend/assets/js/plugins/forms/selects/select2.min.js' %>

<%= javascript_include_tag '/backend/assets/js/core/app.js' %>
<!-- /theme JS files -->