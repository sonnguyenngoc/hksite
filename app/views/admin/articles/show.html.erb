<!-- Main content -->
<div class="content-wrapper">

    <!-- Page header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title">
                <h4><a href="<%= admin_articles_path %>" class="btn-back"><i class="icon-arrow-left52 position-left"></i></a> <span class="text-semibold">Quản lý</span> - Bài viết</h4>
            </div>
        </div>
    
        <div class="breadcrumb-line">
            <ul class="breadcrumb">
                <li><a href="<%= admin_manages_path %>"><i class="icon-home2 position-left"></i> Trang chủ</a></li>
                <li><a href="<%= admin_articles_path %>">Quản lý bài viết</a></li>
                <li><a href="<%= admin_articles_path %>">Danh sách bài viết</a></li>
                <li class="active"><%= @article.title %></li>
            </ul>
        </div>
    </div>
    <!-- /page header -->
    
    <!-- Content area -->
    <div class="content">
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h5 class="panel-title"><span class="text-semibold"><%= @article.title %></span></h5>
                
                <%= content_tag(:p, class: "color-red") do %>
                  <%= notice %>
                <% end %>
            
                <form class="form-horizontal" role="form">
                   
                    <div class="form-group">
                        <%= label "", "Hình ảnh: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= image_tag(@article.image_url.article_picture, alt: "Hình ảnh của bài viết", class: "img-rouded") %>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <%= label "", "Tiêu đề: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static text-justify") do %>
                              <%= @article.title %>
                            <% end %>
                        </div>
                    </div>
                        
                    <div class="form-group">
                        <%= label "", "Nội dung: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static text-justify") do %>
                              <%= (@article.content).html_safe %>
                            <% end %>
                        </div>
                    </div>
                        
                    <div class="form-group">
                        <%= label "", "Loại bài viết: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static") do %>
                              <%=  %>
                            <% end %>
                        </div>
                    </div>
                        
                    <div class="form-group">
                        <%= label "", "Ngày tạo: ", class: "control-label col-sm-2 text-semibold" %>
                        <div class="col-sm-10">
                            <%= content_tag(:p, class: "form-control-static") do %>
                              <%= @article.created_at.strftime("%d/%m/%Y") %>
                            <% end %>
                        </div>
                    </div>
                </form>
            
                <%= link_to '<i class="icon-backward2 position-left"></i> Trở về'.html_safe, admin_articles_path, class: "btn btn-primary" %>
                
            </div>
        </div>
    
        <!-- Footer -->
        <%= render '/admin/manages/footer' %>
        <!-- /footer -->
    
    </div>
    <!-- /content area -->

</div>
<!-- /main content -->

<!-- Theme JS files -->
<%= javascript_include_tag '/backend/assets/js/plugins/tables/datatables/datatables.min.js' %>
<%= javascript_include_tag '/backend/assets/js/plugins/forms/selects/select2.min.js' %>

<%= javascript_include_tag '/backend/assets/js/core/app.js' %>
<!-- /theme JS files -->