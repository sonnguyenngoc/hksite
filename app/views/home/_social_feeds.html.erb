<ul class="social_feeds">

    <!-- - - - - - - - - - - - - - Contact us - - - - - - - - - - - - - - - - -->

    <li>

        <button class="icon_btn middle_btn social_contact open_"><i class="icon-mail-8"></i></button>

        <section class="dropdown">

            <div class="animated_item">

                <h3 class="title">Liên hệ</h3>

            </div><!--/ .animated_item-->
             
            <div class="animated_item">

                <p class="form_caption">Nhập nội dung thông tin cần liên hệ.</p>
                
                <%= form_for @message, url: admin_messages_path,html: {class: "contactform"} do |f| %>

                    <ul>

                        <li class="row">

                            <div class="col-xs-12">

                                <%= f.text_field :name, placeholder: 'Họ & Tên (Bắt buộc)', required: true %>
                                
                            </div>

                        </li>
                        
                        <li class="row">

                            <div class="col-xs-12">
                                
                                <%= f.telephone_field :phone, placeholder: 'Số điện thoại (Bắt buộc)', required: true %>

                            </div>

                        </li>

                        <li class="row">

                            <div class="col-xs-12">
                                
                                <%= f.email_field :email, placeholder: 'Địa chỉ email' %>

                            </div>

                        </li>

                        <li class="row">

                            <div class="col-xs-12">
                                
                                <%= f.text_area :messages, placeholder: 'Lời nhắn (Bắt buộc)', rows: '6', required: true %>

                            </div>

                        </li>
                        
                        <li class="row">

                            <div class="col-xs-12">
                                
                                <%= f.submit 'Gửi lời nhắn', class: 'button_grey middle_btn' %>

                            </div>

                        </li>

                    </ul>

                <% end %>

            </div><!--/ .animated_item-->

        </section><!--/ .dropdown-->

    </li>

    <!-- - - - - - - - - - - - - - End contact us - - - - - - - - - - - - - - - - -->

    <!-- - - - - - - - - - - - - - Google map - - - - - - - - - - - - - - - - -->

    <li>

        <button class="icon_btn middle_btn social_gmap open_"><i class="icon-location-4"></i></button>

        <!--Location-->

        <section class="dropdown">

            <div class="animated_item">

                <h3 class="title">Vị trí công ty</h3>

            </div><!--/ .animated_item-->
             
            <div class="animated_item">
                
                <p class="c_info_location"><%= @company_info.address %></p>

                <div class="proportional_frame">

                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d979.631059828945!2d106.65701382916684!3d10.847674316657857!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTDCsDUwJzUxLjYiTiAxMDbCsDM5JzI3LjIiRQ!5e0!3m2!1svi!2s!4v1456217935069" style="border:0" allowfullscreen></iframe>
                
                </div>

                <ul class="c_info_list">

                    <li class="c_info_phone"><%= @company_info.phone %></li>
                    <li class="c_info_mail"><a href="mailto:<%= @company_info.email %>"><%= @company_info.email %></a></li>
                    <li class="c_info_schedule">

                        <ul>

                            <li>Thứ 2-Thứ 6: 7.30-17.00</li>
                            <li>Thứ 7: 7.30-12.00</li>
                            <li>Chủ nhật: Không làm việc</li>

                        </ul>

                    </li>

                </ul>

            </div><!--/ .animated_item-->

        </section><!--/ .dropdown-->
    
    </li>

    <!-- - - - - - - - - - - - - - End google map - - - - - - - - - - - - - - - - -->

</ul>