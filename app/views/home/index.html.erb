    <%= render 'header' %>
    
    <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->

    <!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->

    <div class="page_wrapper">

        <div class="container">

            <div class="section_offset">

                <div class="row">
                    <div class="col-xs-12">

                        <!-- - - - - - - - - - - - - - Layer slider - - - - - - - - - - - - - - - - -->
                        
                        <div class="layerslider" style="width:100%; height: 522px;">

