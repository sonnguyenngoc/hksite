                            <% @slideshow.each do |product| %>
    
                                <div class="ls-slide" data-ls="transition2d: 10, 27, 63, 67, 69;">
    
                                    <img src="<%= product.image_url.slide_show if product.image_url? %>" class="ls-bg" alt="">
    
