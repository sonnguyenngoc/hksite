                        <!-- - - - - - - - - - - - - - End of carousel of brands - - - - - - - - - - - - - - - - -->

                    </section><!--/ .section_offset.animated.transparent-->
                    
                    <!-- - - - - - - - - - - - - - End our brands - - - - - - - - - - - - - - - - -->

                    <!-- - - - - - - - - - - - - - Bestsellers - - - - - - - - - - - - - - - - -->

                    <section class="section_offset animated transparent" data-animation="fadeInDown">

                        <h3>Bán chạy nhất</h3>

                        <div class="table_layout">

                            <div class="table_row">

                                <!-- - - - - - - - - - - - - - Product - - - - - - - - - - - - - - - - -->
                                <% @bestseller_products.each_with_index do |product,index| %>
                                    <div class="table_cell">
    
                                        <div class="product_item">
    
                                            <!-- - - - - - - - - - - - - - Thumbmnail - - - - - - - - - - - - - - - - -->
    
                                            <div class="image_wrap">
    
                                                <% if product.product_info.nil? %>
                                                    <img src="#" class="img-rounded" alt="Product-Image">
                                                <% else %>
                                                    <img src="<%= product.product_info.image_url if product.product_info.image_url? %>" class="img-rounded" alt="Product-Image">
                                                <% end %>
    
                                                <!-- - - - - - - - - - - - - - Product actions - - - - - - - - - - - - - - - - -->
    
                                                <div class="actions_wrap">
    
                                                    <div class="centered_buttons">
                                                        
                                                        <%= button_to 'Thêm vào giỏ hàng', line_items_path(product_id: product), class: "button_blue middle_btn add_to_cart" %>
    
                                                    </div><!--/ .centered_buttons -->
                                                    
                                                </div><!--/ .actions_wrap-->
                                                
                                                <!-- - - - - - - - - - - - - - End of product actions - - - - - - - - - - - - - - - - -->
    
                                                <!-- - - - - - - - - - - - - - Label - - - - - - - - - - - - - - - - -->
    
                                                <div class="label_bestseller">bestseller</div>
    
                                                <!-- - - - - - - - - - - - - - End label - - - - - - - - - - - - - - - - -->
    
                                            </div><!--/. image_wrap-->
    
                                            <!-- - - - - - - - - - - - - - End thumbmnail - - - - - - - - - - - - - - - - -->
    
                                            <!-- - - - - - - - - - - - - - Product title & price - - - - - - - - - - - - - - - - -->
    
                                            <div class="description">
    
                                                <%= link_to product.name, {controller: "product", action: "index", id: product.id} %>
                                                        
                                                <div class="clearfix product_info">
                                                            
                                                    <p class="product_price alignleft"><b><%= number_with_delimiter product.product_price.price.to_i %> VNĐ</b></p>
                                                        
                                                </div>
    
                                            </div>
    
                                            <!-- - - - - - - - - - - - - - End of product title & price - - - - - - - - - - - - - - - - -->
    
                                        </div><!--/ .product_item-->
    
                                    </div>
                                <%= "</div><div class=\"table_row\">".html_safe if index%3 == 2 %>
                                                
                                <% end %>
                                <!-- - - - - - - - - - - - - - End of product - - - - - - - - - - - - - - - - -->


                            </div>

                        </div>

                        <!-- - - - - - - - - - - - - - View all products - - - - - - - - - - - - - - - - -->

                        <footer class="bottom_box">

                            <a href="#" class="button_grey middle_btn">Xem toàn bộ sản phẩm bán chạy nhất</a>

                        </footer>

                        <!-- - - - - - - - - - - - - - End of view all products - - - - - - - - - - - - - - - - -->

                    </section>

                    <!-- - - - - - - - - - - - - - End of bestsellers - - - - - - - - - - - - - - - - -->

                    <!-- - - - - - - - - - - - - - Latest News - - - - - - - - - - - - - - - - -->

                    <section class="section_offset animated transparent" data-animation="fadeInDown">

                        <h3>Tin tức mới nhất</h3>

                        <div class="table_layout">

                            <div class="table_row">
                                
                                <% @blog.each do |blog| %>

                                    <!-- - - - - - - - - - - - - - Entry - - - - - - - - - - - - - - - - -->
    
                                    <div class="table_cell">
    
                                        <article class="entry">
    
                                            <a href="#" class="thumbnail entry_image">
    
                                                <img src="<%= blog.image_url.article_home if blog.image_url? %>" width="244" height="154" alt="">
    
                                            </a>
    
                                            <h5 class="entry_title"><b><%= link_to blog.title, { controller: "blog_post", action: "index", id: blog.id } %></b></h5>
    
                                            <div class="entry_meta">
    
                                                <span><i class="icon-calendar"></i> <%= blog.created_at.strftime("%d/%m/%Y") %></span>
    
                                                <span><a href="#" class="comments"><i class="icon-comment"></i> 11</a></span>
    
                                            </div><!--/ .byline-->
    
                                            <p><%= blog.content.html_safe %></p>
    
                                        </article><!--/ .entry-->
    
                                    </div>
    
                                    <!-- - - - - - - - - - - - - - End of entry - - - - - - - - - - - - - - - - -->
                                <% end %>

                            </div>

                        </div>

                        <!-- - - - - - - - - - - - - - View all entries - - - - - - - - - - - - - - - - -->

                        <footer class="bottom_box">

                            <%= link_to "Xem thêm", { controller: "blog", action: "index" }, { class: "button_grey middle_btn" } %>
                            
                        </footer>

                        <!-- - - - - - - - - - - - - - End of view all entries - - - - - - - - - - - - - - - - -->

                    </section><!--/ .section_offset.aniamted.transparent-->

                    <!-- - - - - - - - - - - - - - End of latest news - - - - - - - - - - - - - - - - -->

                </main>

            </div><!--/ .row-->

        </div><!--/ .container-->

    </div><!--/ .page_wrapper-->
    
    <!-- - - - - - - - - - - - - - End Page Wrapper - - - - - - - - - - - - - - - - -->

    <!-- - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - - -->

    <%= render 'footer' %>
    
    <!-- - - - - - - - - - - - - - End Footer - - - - - - - - - - - - - - - - -->

</div><!--/ [layout]-->

