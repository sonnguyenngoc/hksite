<!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->

<div class="wide_layout">

<!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->

<%= render "blog/header" %>

<!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->

<!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->

<div class="secondary_page_wrapper">

    <div class="container">

        <!-- - - - - - - - - - - - - - Breadcrumbs - - - - - - - - - - - - - - - - -->

        <ul class="breadcrumbs">

            <li><%= link_to "Trang chủ", root_path %></li>
            <li><a href="#">Thiết bị tin học</a></li>
            <li class="active"><%= @pro_detail.name %></li>
            
        </ul>

        <!-- - - - - - - - - - - - - - End of breadcrumbs - - - - - - - - - - - - - - - - -->

        <div class="row">

            <main class="col-md-9 col-sm-8">

                <!-- - - - - - - - - - - - - - Product images & description - - - - - - - - - - - - - - - - -->

                <section class="section_offset">

                    <div class="clearfix">

                        <!-- - - - - - - - - - - - - - Product image column - - - - - - - - - - - - - - - - -->

                        <div class="single_product">

                            <!-- - - - - - - - - - - - - - Image preview container - - - - - - - - - - - - - - - - -->

                            <div class="image_preview_container">

                                <% if @pro_detail.product_info.nil? %>
                                    <img src="images/img_product_detail.jpg" class="img-rounded" alt="">
                                <% else %>
                                    <img id="img_zoom" data-zoom-image="<%= @pro_detail.product_info.image_url if @pro_detail.product_info.image_url? %>" src="<%= @pro_detail.product_info.image_url if @pro_detail.product_info.image_url? %>"
                                    style="width: 360px; height: 330px;" alt="">
                                <% end %>

                                <button class="button_grey_2 icon_btn middle_btn open_qv"><i class="icon-resize-full-6"></i></button>

                            </div><!--/ .image_preview_container-->

                            <!-- - - - - - - - - - - - - - End of image preview container - - - - - - - - - - - - - - - - -->

                            <!-- - - - - - - - - - - - - - Prodcut thumbs carousel - - - - - - - - - - - - - - - - -->
                            
                            <div class="product_preview">

                                <div class="owl_carousel" id="thumbnails">

                                </div><!--/ .owl-carousel-->

                            </div><!--/ .product_preview-->
                            
                            <!-- - - - - - - - - - - - - - End of prodcut thumbs carousel - - - - - - - - - - - - - - - - -->

                        </div>

                        <!-- - - - - - - - - - - - - - End of product image column - - - - - - - - - - - - - - - - -->

                        <!-- - - - - - - - - - - - - - Product description column - - - - - - - - - - - - - - - - -->

                        <div class="single_product_description">

                            <h3 class="offset_title"><%= @pro_detail.name %></h3>

                            <div class="description_section v_centered">

                            </div>

                            <div class="description_section">

                                <table class="product_info">

                                    <tbody>

                                        <tr>

                                            <td>Nhà cung cấp: </td>
                                            <td><a href="#"><%= @pro_detail.manufacturer.name %></a></td>

                                        </tr>

                                        <tr>

                                            <td>Mã sản phẩm: </td>
                                            <td><%= @pro_detail.product_code %></td>

                                        </tr>

                                    </tbody>

                                </table>

                            </div>

                            <hr>

                            <div class="description_section">
                                Mô tả:
                                <p><%= @pro_detail.product_info.note if !@pro_detail.product_info.nil? %></p>

                            </div>

                            <hr>

                            <% if @pro_detail.product_price.price.nil? %>
                                <p class="product_price"><b class="theme_color" style="color: #018bc8">Liên hệ</b></p>
                            <% else %>
                                <p class="product_price"><b><%= number_with_delimiter @pro_detail.product_price.price.to_i %> VNĐ</b></p>
                            <% end %>

                            <!-- - - - - - - - - - - - - - Quantity - - - - - - - - - - - - - - - - -->

                            <div class="description_section_2 v_centered">
                                
                                <span class="title">Số lượng:</span>

                                <div class="qty min clearfix">

                                    <button class="theme_button" data-direction="minus">&#45;</button>
                                    <input type="text" name="" value="1">
                                    <button class="theme_button" data-direction="plus">&#43;</button>

                                </div>

                            </div>

                            <!-- - - - - - - - - - - - - - End of quantity - - - - - - - - - - - - - - - - -->

                            <!-- - - - - - - - - - - - - - Product actions - - - - - - - - - - - - - - - - -->

                            <div class="buttons_row">

                                <%= button_to 'Thêm vào giỏ hàng', line_items_path(product_id: @pro_detail), class: "button_blue middle_btn add_to_cart" %>
                                
                            </div>

                            <!-- - - - - - - - - - - - - - End of product actions - - - - - - - - - - - - - - - - -->

                        </div>

                        <!-- - - - - - - - - - - - - - End of product description column - - - - - - - - - - - - - - - - -->

                    </div>

                </section><!--/ .section_offset -->

                <!-- - - - - - - - - - - - - - End of product images & description - - - - - - - - - - - - - - - - -->

                <!-- - - - - - - - - - - - - - Tabs - - - - - - - - - - - - - - - - -->

                <div class="section_offset">

                    <div class="tabs type_2">

                        <!-- - - - - - - - - - - - - - Navigation of tabs - - - - - - - - - - - - - - - - -->

                        <ul class="tabs_nav clearfix">

                            <li><a href="#tab-1">Giới thiệu</a></li>

                        </ul>
                        
                        <!-- - - - - - - - - - - - - - End navigation of tabs - - - - - - - - - - - - - - - - -->

                        <!-- - - - - - - - - - - - - - Tabs container - - - - - - - - - - - - - - - - -->

                        <div class="tab_containers_wrap">

                            <!-- - - - - - - - - - - - - - Tab - - - - - - - - - - - - - - - - -->

                            <div id="tab-1" class="tab_container">

                                <%= @pro_detail.product_info.description if !@pro_detail.product_info.nil? %>
                                
                            </div><!--/ #tab-1-->

                            <!-- - - - - - - - - - - - - - End tab - - - - - - - - - - - - - - - - -->

                        </div><!--/ .tab_containers_wrap -->

                        <!-- - - - - - - - - - - - - - End of tabs containers - - - - - - - - - - - - - - - - -->

                    </div><!--/ .tabs-->

                </div><!--/ .section_offset -->

                <!-- - - - - - - - - - - - - - End of tabs - - - - - - - - - - - - - - - - -->

                <!-- - - - - - - - - - - - - - Related products - - - - - - - - - - - - - - - - -->

                <section class="section_offset">

                    <h3 class="offset_title">Sản phẩm liên quan</h3>

                    <div class="owl_carousel related_products">

                        <!-- - - - - - - - - - - - - - Product - - - - - - - - - - - - - - - - -->
                        <% @related_products.each do |product| %>
                            <div class="product_item">

                                <!-- - - - - - - - - - - - - - Thumbmnail - - - - - - - - - - - - - - - - -->

                                <div class="image_wrap">
                                    
                                    <% if product.product_info.nil? %>
                                        <img src="images/product_img_1.jpg" class="img-rounded" alt="">
                                    <% else %>
                                        <img src="<%= product.product_info.image_url if product.product_info.image_url? %>" class="img-rounded"
                                        style="width: 172px; height: 172px;" alt="">
                                    <% end %>

                                    <!-- - - - - - - - - - - - - - Product actions - - - - - - - - - - - - - - - - -->

                                    <div class="actions_wrap">

                                        <div class="centered_buttons">

                                            <%= button_to 'Thêm vào giỏ hàng', line_items_path(product_id: product), class: "button_blue add_to_cart" %>

                                        </div><!--/ .centered_buttons -->

                                    </div><!--/ .actions_wrap-->
                                    
                                    <!-- - - - - - - - - - - - - - End of product actions - - - - - - - - - - - - - - - - -->

                                </div><!--/. image_wrap-->

                                <!-- - - - - - - - - - - - - - End thumbmnail - - - - - - - - - - - - - - - - -->

                                <!-- - - - - - - - - - - - - - Product title & price - - - - - - - - - - - - - - - - -->

                                <div class="description">

                                    <%= link_to (truncate(strip_tags(product.name), length: 28)), {controller: "product", action: "index", id: product.id} %>

                                    <div class="clearfix product_info">

                                        <% if product.product_price.price.nil? %>
                                            <p class="product_price alignleft"><b style="color: #018bc8">Liên hệ</b></p>
                                        <% else %>
                                            <p class="product_price alignleft"><b><%= number_with_delimiter product.product_price.price.to_i %> VNĐ</b></p>
                                        <% end %>
                                        
                                    </div>

                                </div>

                                <!-- - - - - - - - - - - - - - End of product title & price - - - - - - - - - - - - - - - - -->

                            </div><!--/ .product_item-->
                            
                        <% end %>
                        
                        <!-- - - - - - - - - - - - - - End product - - - - - - - - - - - - - - - - -->

                    </div><!--/ .owl_carousel -->

                </section><!--/ .section_offset -->

            </main><!--/ [col]-->

            <aside class="col-md-3 col-sm-4">

                <!-- - - - - - - - - - - - - - Seller Information - - - - - - - - - - - - - - - - -->

                <section class="section_offset">

                    <h3>Liên hệ</h3>

                    <div class="theme_box">

                      <ul class="c_info_list">
                            <li class="c_info_building"><b><%= @company_info.name %></b></li>
                            <li class="c_info_location"><%= @company_info.address %></li>
                            <li class="c_info_phone"><%= @company_info.phone %></li>
                            <li class="c_info_mail"><a href="mailto:<%= @company_info.email %>"><%= @company_info.email %></a></li>
  
                      </ul>
                        
                    </div><!--/ .theme_box -->

                </section>

                <!-- - - - - - - - - - - - - - End of seller information - - - - - - - - - - - - - - - - -->

            </aside><!--/ [col]-->

        </div><!--/ .row-->

    </div><!--/ .container-->

</div><!--/ .page_wrapper-->

<!-- - - - - - - - - - - - - - End Page Wrapper - - - - - - - - - - - - - - - - -->

<!-- - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - - -->

<%= render 'blog/footer' %>

<!-- - - - - - - - - - - - - - End Footer - - - - - - - - - - - - - - - - -->

</div><!--/ [layout]-->

<!-- - - - - - - - - - - - - - End Main Wrapper - - - - - - - - - - - - - - - - -->

