<header class="site-header header-opt-1">
    <!-- header-top -->
    <div class="header-top">
        <div class="container">
            <!-- hotline -->
            <%= render '/modules/header/hotline' %>
            <!-- hotline -->
            <!-- header links -->
            <%= render '/modules/header/header_links' %>
            <!-- header links -->
        </div>
    </div> <!-- header-top -->
    <!-- header-content -->
    <div class="header-content">
        <div class="container">
            <div class="row">
                <div class="col-md-4 nav-left">
                    <!-- logo -->
                    <%= render '/modules/header/logo' %>
                    <!-- logo -->
                </div>
                <div class="col-md-6 nav-mind">
                    <!-- smart search -->
                    <%= render '/modules/header/smart_search' %>
                    <!-- smart search -->
                </div>
                <div class="col-md-2 nav-right">
                    <!-- block mini cart -->
                    <%= render '/modules/header/mobile_icon_menu' %>
                    <%= render '/modules/header/mini_cart' %>
                    <!-- block mini cart -->
                    <a href="" class="hidden-md search-hidden"><span class="pe-7s-search"></span></a>
                </div>
            </div>
        </div>
    </div><!-- header-content -->
    <!-- header-menu-bar -->
    <div class="header-menu-bar header-sticky">
        <div class="header-menu-nav menu-style-1">
            <div class="container">
                <div class="header-menu-nav-inner ">
                    <div class="header-menu header-menu-resize">
                        <%= render '/modules/header/header_menu' %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>