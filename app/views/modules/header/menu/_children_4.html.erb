<li class="menu-item-has-children arrow item-megamenu">
    <%= link_to menu.title, category_path(id: menu.id, title: url_friendly(strip_tags(menu.title))), title: menu.title, class: 'parent-menu' %>
    <span class="toggle-submenu hidden-md"></span>
    <div class="submenu parent-megamenu megamenu" style="background-image: url('/hksite/images/home1/menu-banner-1.jpg');">
        <div class="row">
            <div class="submenu-banner submenu-banner-menu-2">
                <% menu.children.each do |child_1| %>
                    <% if child_1.children.count > 10 %>
                        <div class="col-md-2">
                            <div class="dropdown-menu-info">
                                <h6 class="dropdown-menu-title"><%= child_1.title %></h6>
                                <div class="dropdown-menu-content">
                                    <ul class="menu">
                                        <% child_1.children[0..9].each do |child_2| %>
                                            <li class="menu-item">
                                                <%= link_to child_2.title, category_path(id: child_2.id, title: url_friendly(strip_tags(child_2.title))), title: child_2.title %>
                                            </li>
                                        <% end %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="dropdown-menu-info">
                                <h6 class="dropdown-menu-title"><%= child_1.title %></h6>
                                <div class="dropdown-menu-content">
                                    <ul class="menu">
                                        <% child_1.children[10..20].each do |child_2| %>
                                            <li class="menu-item">
                                                <%= link_to child_2.title, category_path(id: child_2.id, title: url_friendly(strip_tags(child_2.title))), title: child_2.title %>
                                            </li>
                                        <% end %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    <% else %>
                        <div class="col-md-2">
                            <div class="dropdown-menu-info">
                                <h6 class="dropdown-menu-title"><%= child_1.title %></h6>
                                <div class="dropdown-menu-content">
                                    <ul class="menu">
                                        <% child_1.children.each do |child_2| %>
                                            <li class="menu-item">
                                                <%= link_to child_2.title, category_path(id: child_2.id, title: url_friendly(strip_tags(child_2.title))), title: child_2.title %>
                                            </li>
                                        <% end %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    <% end %>
                <% end %>                
            </div>
        </div>
    </div>
</li>