<!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->

<div class="wide_layout">

    <!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->

    <%= render 'blog/header' %>
    
    <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->

    <!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->

    <div class="secondary_page_wrapper">

        <div class="container">

            <!-- - - - - - - - - - - - - - Breadcrumbs - - - - - - - - - - - - - - - - -->

            <ul class="breadcrumbs">

                <li><a href="index.html">Trang chủ</a></li>
                <li>Tin tức</li>
                <li class="active"><%= @find_tag.title %></li>

            </ul>

            <div class="row">

                <aside class="col-md-3 col-sm-4">

                    <!-- - - - - - - - - - - - - - Categories - - - - - - - - - - - - - - - - -->

                    <section class="section_offset">

                        <h3>Danh mục</h3>

                        <ul class="theme_menu">
                            
                            <% @tag.each do |tag| %>
                                <% if tag.title == "Giới thiệu công ty" %>
                                    <li><%= link_to tag.title, {controller: "about_us", action: "index"} %></li>
                                <% else %>
                                    <li><%= link_to tag.title, {controller: "blog_detail", action: "index", id: tag.id} %></li>
                                <% end %>
                            <% end %>

                        </ul>

                    </section><!--/ .section_offset -->

                    <!-- - - - - - - - - - - - - - End of categories - - - - - - - - - - - - - - - - -->

                    <!-- - - - - - - - - - - - - - Popular posts - - - - - - - - - - - - - - - - -->

                    <section class="section_offset">

                        <h3>Tin mới nhất</h3>

                        <ul class="list_of_entries">
                            
                            <% @new_blog_footer.each do |blog| %>

                                <!-- - - - - - - - - - - - - - Entry - - - - - - - - - - - - - - - - -->
    
                                <li>
                                        
                                    <article class="entry">
                                        
                                        <!-- - - - - - - - - - - - - - Thumbnail - - - - - - - - - - - - - - - - -->
    
                                        <a href="#" class="entry_thumb">
    
                                            <img src="<%= blog.image_url.article_home if blog.image_url? %>" width="83" height="83" alt="">
    
                                        </a>
    
                                        <!-- - - - - - - - - - - - - - End of thumbnail - - - - - - - - - - - - - - - - -->
    
                                        <div class="wrapper">
    
                                            <h6 class="entry_title"><%= link_to blog.title, { controller: "blog_post", action: "index", id: blog.id } %></h6>
    
                                            <!-- - - - - - - - - - - - - - Byline - - - - - - - - - - - - - - - - -->
    
                                            <div class="entry_meta">
    
                                                <span><i class="icon-calendar"></i> <%= blog.created_at.strftime("%d/%m/%Y") %></span>
    
                                            </div><!--/ .byline-->
    
                                            <!-- - - - - - - - - - - - - - End of byline - - - - - - - - - - - - - - - - -->
    
                                        </div><!--/ .wrapper-->
    
                                    </article><!--/ .clearfix-->
    
                                </li>
    
                                <!-- - - - - - - - - - - - - - End of entry - - - - - - - - - - - - - - - - -->
                            
                            <% end %>
                            
                        </ul>

                    </section><!--/ .section_offset -->

                    <!-- - - - - - - - - - - - - - End of popular posts - - - - - - - - - - - - - - - - -->

                    <!-- - - - - - - - - - - - - - Banner - - - - - - - - - - - - - - - - -->

                    <div class="section_offset">

                        <a href="#" class="banner">
                            
                            <img src="images/logo-company.jpg" alt="">

                        </a>

                    </div>

                    <!-- - - - - - - - - - - - - - End of banner - - - - - - - - - - - - - - - - -->

                </aside><!--/ [col]-->

                <main class="col-md-9 col-sm-8">

                    <h1><%= @find_tag.title %></h1>

                    <header class="top_box on_the_sides">

                        <div class="left_side v_centered">

                            <!-- - - - - - - - - - - - - - Blog layout type - - - - - - - - - - - - - - - - -->

                            <div class="layout_type buttons_row" data-table-container="#main_blog_list">

                                <a href="#" data-table-layout="grid_view" class="button_grey middle_btn icon_btn tooltip_container"><i class="icon-th"></i><span class="tooltip top">Grid View</span></a>

                            </div>

                            <!-- - - - - - - - - - - - - - End of blog layout type - - - - - - - - - - - - - - - - -->

                            <p><%= page_entries_info @blog %> bài viết.</p>

                        </div>

                        <div class="right_side">

                            <%= will_paginate @blog, previous_label: '<', next_label: '>', renderer: BootstrapPagination::Rails %>

                        </div>

                    </header>

                    <!-- - - - - - - - - - - - - - List of entries - - - - - - - - - - - - - - - - -->

                    <ul id="main_blog_list" class="list_of_entries list_view">
                        
                        <% @blog.each do |blog| %>
                            
                            <% if blog.tag_id == @find_tag.id %>
                        
                                <li>
    
                                    <!-- - - - - - - - - - - - - - Entry - - - - - - - - - - - - - - - - -->
                                    
                                    <article class="entry">
    
                                        <!-- - - - - - - - - - - - - - Entry image - - - - - - - - - - - - - - - - -->
    
                                        <a href="#" class="thumbnail entry_image">
                                            
                                            <img src="<%= blog.image_url.article_blog if blog.image_url? %>" alt="">
    
                                        </a>
    
                                        <!-- - - - - - - - - - - - - - End of entry image - - - - - - - - - - - - - - - - -->
    
                                        <h4 class="entry_title"><%= link_to blog.title, { controller: "blog_post", action: "index", id: blog.id } %></h4>
    
                                        <!-- - - - - - - - - - - - - - Entry meta - - - - - - - - - - - - - - - - -->
    
                                        <div class="entry_meta">
    
                                            <div class="alignleft">
    
                                                <span><i class="icon-calendar"></i> <%= blog.created_at.strftime("%d/%m/%Y") %></span>
    
                                                <span><i class="icon-user-8"></i> đăng bởi <a href="#">Quản trị viên</a></span>
    
                                                <span><i class="icon-folder-open-empty-1"></i> <%= link_to blog.tag.title, { controller: "blog_detail", action: "index", id: blog.tag_id } %></span>
    
                                            </div>
    
                                            <div class="alignright">
    
                                                Đánh giá
    
                                                <!-- - - - - - - - - - - - - - Entry rating - - - - - - - - - - - - - - - - -->
    
                                                <ul class="rating">
    
                                                    <li class="active"></li>
                                                    <li class="active"></li>
                                                    <li class="active"></li>
                                                    <li></li>
                                                    <li></li>
    
                                                </ul>
                                                
                                                <!-- - - - - - - - - - - - - - End of entry rating - - - - - - - - - - - - - - - - -->
    
                                            </div>
    
                                        </div><!--/ .byline-->
    
                                        <!-- - - - - - - - - - - - - - End of entry meta - - - - - - - - - - - - - - - - -->
    
                                        <p><%= truncate(strip_tags(blog.content.html_safe), length: 250) %></p>
                                        
                                        <%= link_to "Xem tiếp", { controller: "blog_post", action: "index", id: blog.id }, { class: "button_grey middle_btn" } %>
    
                                    </article>
    
                                    <!-- - - - - - - - - - - - - - End of entry - - - - - - - - - - - - - - - - -->
    
                                </li>
                            
                            <% end %>
                            
                        <% end %>

                    </ul>

                    <!-- - - - - - - - - - - - - - End of list of entries - - - - - - - - - - - - - - - - -->

                    <footer class="bottom_box on_the_sides">

                        <div class="left_side">

                            <%= page_entries_info @blog %> bài viết.

                        </div>

                        <div class="right_side">

                            <%= will_paginate @blog, previous_label: '<', next_label: '>', renderer: BootstrapPagination::Rails %>

                        </div>

                    </footer>


                </main><!--/ [col]-->

            </div><!--/ .row-->

        </div><!--/ .container-->

    </div><!--/ .page_wrapper-->
    
    <!-- - - - - - - - - - - - - - End Page Wrapper - - - - - - - - - - - - - - - - -->

    <!-- - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - - -->

    <%= render 'blog/footer' %>
    
    <!-- - - - - - - - - - - - - - End Footer - - - - - - - - - - - - - - - - -->

</div><!--/ [layout]-->

<!-- - - - - - - - - - - - - - End Main Wrapper - - - - - - - - - - - - - - - - -->

<!-- - - - - - - - - - - - - - Social feeds - - - - - - - - - - - - - - - - -->

<%= render "home/social_feeds" %>

