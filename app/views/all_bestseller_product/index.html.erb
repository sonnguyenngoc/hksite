<!-- - - - - - - - - - - - - - Main Wrapper - - - - - - - - - - - - - - - - -->

<div class="wide_layout">

    <!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->

    <%= render 'blog/header' %>
    
    <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->

    <!-- - - - - - - - - - - - - - Page Wrapper - - - - - - - - - - - - - - - - -->

    <div class="secondary_page_wrapper">

        <div class="container">

            <!-- - - - - - - - - - - - - - Breadcrumbs - - - - - - - - - - - - - - - - -->

            <ul class="breadcrumbs">

                <li><%= link_to "Trang chủ", root_path %></li>
                <li>Danh sách sản phẩm bán chạy nhất</li>

            </ul>

            <div class="row">

                <aside class="col-md-3 col-sm-4 has_mega_menu">

                    <!-- - - - - - - - - - - - - - Categories - - - - - - - - - - - - - - - - -->

                    <%= render 'category_page/category_left_page' %>

                    <!-- - - - - - - - - - - - - - End of categories - - - - - - - - - - - - - - - - -->

                    <!-- - - - - - - - - - - - - - Filter - - - - - - - - - - - - - - - - -->

                    <section class="section_offset">

                        <h3>Bộ lọc</h3>

                        <%= form_tag({controller: "product_search", action: "index"}, method: "get", class: "type_2") do %>

                            <div class="table_layout list_view">

                                <div class="table_row">

                                    <!-- - - - - - - - - - - - - - Category filter - - - - - - - - - - - - - - - - -->

                                    <div class="table_cell">

                                        <label>Tên sản phẩm</label>
                                        
                                        <%= text_field_tag :search_bestseller_products, params[:search_bestseller_products], placeholder: "Nhập tên sản phẩm cần tìm..." %>

                                    </div><!--/ .table_cell -->

                                    <!-- - - - - - - - - - - - - - End of category filter - - - - - - - - - - - - - - - - -->

                                </div><!--/ .table_row -->

                            </div><!--/ .table_layout -->

                            <footer class="bottom_box">

                                <div class="buttons_row">

                                    <button type="submit" class="button_blue middle_btn">Tìm kiếm</button>

                                    <button type="reset" class="button_grey middle_btn filter_reset">Nhập lại</button>

                                </div>

                            </footer>

                        <% end %>

                    </section>

                    <!-- - - - - - - - - - - - - - End of filter - - - - - - - - - - - - - - - - -->
                    
                    <!-- - - - - - - - - - - - - - Banner - - - - - - - - - - - - - - - - -->

                    <div class="section_offset">

                        <a href="#" class="banner">
                            
                            <img src="images/box-win-10.jpg" alt="" width="243" height="262">

                        </a>

                    </div>

                    <!-- - - - - - - - - - - - - - End of banner - - - - - - - - - - - - - - - - -->

                    <!-- - - - - - - - - - - - - - Tags - - - - - - - - - - - - - - - - -->

                    <section class="section_offset">

                        <h3>Nhãn</h3>

                        <div class="tags_container">

                            <ul class="tags_cloud">
                                
                                <% @menu.each do |item| %>
                            
                                    <% if item.level == 1 %>
                                        
                                        <li><a class="button_grey" <%= (link_to item.title, {controller: "category_page", action: "index", category_id: item.id }).html_safe %></a></li>
                                        
                                    <% end %>
                                
                                <% end %>

                            </ul><!--/ .tags_cloud-->
                            
                        </div><!--/ .tags_container-->

                    </section>

                    <!-- - - - - - - - - - - - - - End of tags - - - - - - - - - - - - - - - - -->

                </aside>

                <main class="col-md-9 col-sm-8">

                    <section class="section_offset">

                        <h1>Danh sách sản phẩm bán chạy nhất</h1>

                    </section>

                    <!-- - - - - - - - - - - - - - Products - - - - - - - - - - - - - - - - -->

                    <div class="section_offset">

                        <header class="top_box on_the_sides">

                            <div class="clearfix v_centered">
                                
                                <%= form_tag({controller: "all_bestseller_product", action: "index"}, method: "get") do %>
                                    
                                    <!-- - - - - - - - - - - - - - Sort by - - - - - - - - - - - - - - - - -->
    
                                    <div class="v_centered">
    
                                        <span>Sắp xếp theo:</span>
    
                                        <div class="sort_select">
                                            
                                            <select name="sort_by">
                                                    
                                                <option value="name">Tên</option>
                                                <option value="price">Giá</option>
                                                <option value="created_at">Ngày</option>
    
                                            </select>
    
                                        </div>
                                        
                                        <div class="sort_select">
                                            
                                            <select name="sort_group">
                                                    
                                                <option value="ASC">Tăng dần</option>
                                                <option value="DESC">Giảm dần</option>
    
                                            </select>
    
                                        </div>
                                        
                                        <button type="submit" class="button_blue middle_btn" style="margin-top: 10px;">Lọc sản phẩm</button>
    
                                    </div>
    
                                    <!-- - - - - - - - - - - - - - End of sort by - - - - - - - - - - - - - - - - -->
                                
                                <% end %>
                            
                            </div>

                        </header>

                        <div class="table_layout" id="products_container">
                            
                            <div class="table_row">
                                
                                <% @products.each_with_index do |product, index| %>

                                    <!-- - - - - - - - - - - - - - Product - - - - - - - - - - - - - - - - -->
    
                                    <div class="table_cell">
    
                                        <div class="product_item">
    
                                            <!-- - - - - - - - - - - - - - Thumbmnail - - - - - - - - - - - - - - - - -->
    
                                            <div class="image_wrap">
    
                                                <img src="<%= product.product_image.image %>" alt="">
    
                                                <!-- - - - - - - - - - - - - - Product actions - - - - - - - - - - - - - - - - -->
    
                                                <div class="actions_wrap">
    
                                                    <div class="centered_buttons">
                                                        
                                                        <% if !product.product_price.price.nil? %>
    
                                                            <%= button_to 'Thêm vào giỏ hàng', line_items_path(product_id: product), class: "button_blue middle_btn add_to_cart" %>
                                                        
                                                        <% end %>
    
                                                    </div><!--/ .centered_buttons -->
    
                                                </div><!--/ .actions_wrap-->
                                                
                                                <!-- - - - - - - - - - - - - - End of product actions - - - - - - - - - - - - - - - - -->
    
                                                <!-- - - - - - - - - - - - - - Label - - - - - - - - - - - - - - - - -->
        
                                                    <div class="label_bestseller">Bán chạy chất</div>
    
                                                <!-- - - - - - - - - - - - - - End label - - - - - - - - - - - - - - - - -->
                                                
                                            </div><!--/. image_wrap-->
    
                                            <!-- - - - - - - - - - - - - - End thumbmnail - - - - - - - - - - - - - - - - -->
    
                                            <!-- - - - - - - - - - - - - - Product title & price - - - - - - - - - - - - - - - - -->
    
                                            <div class="description">
    
                                                <%= link_to product.name, {controller: "product", action: "index", id: product.id} %>
    
                                                <div class="clearfix product_info">
                                                    
                                                    <% if product.product_price.price.nil? %>
    
                                                        <p class="product_price alignleft"><b>Liên hệ:(84-8) 3984 7690</b></p>
                                                    
                                                    <% else %>
                                                        
                                                        <p class="product_price alignleft"><b><%= number_with_delimiter product.product_price.price.to_i %> VNĐ</b></p>
                                                        
                                                        <!-- - - - - - - - - - - - - - Product rating - - - - - - - - - - - - - - - - -->
    
                                                        <ul class="rating alignright">
        
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li class="active"></li>
                                                            <li></li>
        
                                                        </ul>
                                                        
                                                        <!-- - - - - - - - - - - - - - End of product rating - - - - - - - - - - - - - - - - -->
                                                    
                                                    <% end %> 
    
                                                </div>
    
                                            </div>
    
                                            <!-- - - - - - - - - - - - - - End of product title & price - - - - - - - - - - - - - - - - -->
    
                                        </div><!--/ .product_item-->
    
                                    </div>
    
                                    <!-- - - - - - - - - - - - - - End of product - - - - - - - - - - - - - - - - -->
                                    
                                    <%= "</div><div class=\"table_row\">".html_safe if index%3 == 2 %>
                                
                                <% end %>
                            
                            </div><!--/ .table_row -->

                        </div><!--/ .table_layout -->

                        <footer class="bottom_box on_the_sides">

                            <div class="left_side">

                                <%= page_entries_info @products %> sản phẩm.

                            </div>

                            <div class="right_side">
                                <%= will_paginate @products, previous_label: '<', next_label: '>', renderer: BootstrapPagination::Rails %>
                            </div>

                        </footer>

                    </div>

                    <!-- - - - - - - - - - - - - - End of products - - - - - - - - - - - - - - - - -->

                </main>

            </div><!--/ .row -->

        </div><!--/ .container-->

    </div><!--/ .page_wrapper-->
    
    <!-- - - - - - - - - - - - - - End Page Wrapper - - - - - - - - - - - - - - - - -->

    <!-- - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - - -->

    <%= render 'blog/footer' %>
    
    <!-- - - - - - - - - - - - - - End Footer - - - - - - - - - - - - - - - - -->

</div><!--/ [layout]-->

<!-- - - - - - - - - - - - - - End Main Wrapper - - - - - - - - - - - - - - - - -->

